                <label for="artist_name">Full Name</label>
                <input type="text" class="form-control" name="artist_name" value="{{this.artist_name}}">
                <label for="artist_email">Email</label>
                <input type="text" class="form-control" name="email" value="{{this.email}}">
                <label for="location">Location</label>
                <input type class="form-control" name="location" value="{{this.location}}">
                <label for="genre">Genres</label>
                <input type class="form-control" name="genre" value="{{this.genre}}">
                <label for="experience">Experience</label>
                <textarea rows="6" class="form-control" name="experience">{{this.experience}}</textarea><br>
